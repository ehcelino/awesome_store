<div class="container">
  <div class="p-3 my-3 border shadow white-bkg mx-auto" style="width:300px;">
    <%= render partial: "alert" %>
      <h3>Conta</h3>
      <%= form_for user do |f| %>
        <% if user.errors.any? %>
          <div id="notice" class="alert alert-dismissible alert-warning">
            <h3>Atenção:</h3>
            <ul>
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label 'Usuário', class: "form-label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= f.label 'Email', class: "form-label" %>
            <%= f.text_field :email, class: "form-control" %>
        </div>
    
        <div class="mb-3">
            <%= f.label 'Senha', class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= f.label 'Repita a senha', class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.submit "Enviar", class: "btn btn-outline-primary mb-3" %>
        </div>
      <% end %>
  </div>
</div>
