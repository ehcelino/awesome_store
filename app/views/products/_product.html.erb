  <div id="<%= dom_id product %>">
    <div style="display:flex;justify-content:space-between; margin: 0em 5em;">
      <%= product.title %>

      <%= product.value %>

      <%= form_with(url: cart_add_path)  do |f| %>
        <%= f.hidden_field :id, value: product.id %>
        
          <%= f.label :quantity, "Quantidade", class: "form-label" %>
          <%= f.number_field :quantity, value: 0, style: "width: 4em;", id: "number_field" %>
        <%= f.submit "Comprar", class: "btn btn-primary mb-3" %>
      <% end %>
    </div>
