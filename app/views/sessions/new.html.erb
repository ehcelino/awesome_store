<div class="container">
  <div class="p-3 my-3 border shadow white-bkg mx-auto" style="width:300px;">
    <%= render partial: "alert" %>
    <%= form_tag sessions_path do %>
      <div class="mb-3">
        <%= label_tag :username, "UsuÃ¡rio", class: "form-label" %>
        <%= text_field_tag :username, params[:username], class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= label_tag :password, "Senha", class: "form-label" %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
